<nav class="<?= $this->class ?> block"<?= $this->cssID ?><?php if ($this->style): ?> style="<?= $this->style ?>"<?php endif; ?> aria-label="Breadcrumb" itemprop="breadcrumb" itemscope itemtype="http://schema.org/BreadcrumbList">

  <?php $this->block('headline'); ?>
